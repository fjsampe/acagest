<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="180.0" prefWidth="320" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="capaPresentacion.FXMLLoginController">
   <children>
      <VBox>
         <children>
            <VBox prefHeight="60.0" spacing="15.0">
               <children>
                  <Label fx:id="cabecera" alignment="CENTER_RIGHT" text="Acagest">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="15.0" top="10.0" />
                     </padding></Label>
                  <Label alignment="CENTER" prefWidth="320.0" text="Identificación de Usuarios" />
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="320.0" spacing="10.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefWidth="120.0" spacing="10.0">
                     <children>
                        <Label text="Usuario:" />
                        <Label text="Contraseña:   " />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <TextField fx:id="usuarioTxt" prefWidth="180.0">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin></TextField>
                        <PasswordField fx:id="passwordTxt" />
                     </children>
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="40.0" spacing="60.0">
               <children>
                  <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#clickLoginBtn" text="Log In">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
               </children>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
